@page
@model Becas_Escolar.Pages.Datos_Economicos_Service.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Nueva Informacion</h1>

<h4>Datos Economicos Del Alumnos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
