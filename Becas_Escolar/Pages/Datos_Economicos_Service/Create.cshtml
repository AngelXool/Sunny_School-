                <label asp-for="Datos_Economicos.Ingresos_Mensuales" class="control-label"></label>
                <input asp-for="Datos_Economicos.Ingresos_Mensuales" class="form-control" />
                <span asp-validation-for="Datos_Economicos.Ingresos_Mensuales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datos_Economicos.Gasto_Alimentacion" class="control-label"></label>
                <input asp-for="Datos_Economicos.Gasto_Alimentacion" class="form-control" />
                <span asp-validation-for="Datos_Economicos.Gasto_Alimentacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datos_Economicos.Gasto_Escolar" class="control-label"></label>
                <input asp-for="Datos_Economicos.Gasto_Escolar" class="form-control" />
                <span asp-validation-for="Datos_Economicos.Gasto_Escolar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datos_Economicos.Gasto_Vivienda" class="control-label"></label>
                <input asp-for="Datos_Economicos.Gasto_Vivienda" class="form-control" />
                <span asp-validation-for="Datos_Economicos.Gasto_Vivienda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datos_Economicos.Gasto_Servicios" class="control-label"></label>
                <input asp-for="Datos_Economicos.Gasto_Servicios" class="form-control" />
                <span asp-validation-for="Datos_Economicos.Gasto_Servicios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datos_Economicos.Gasto_Transporte" class="control-label"></label>
                <input asp-for="Datos_Economicos.Gasto_Transporte" class="form-control" />
                <span asp-validation-for="Datos_Economicos.Gasto_Transporte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datos_Economicos.Otros" class="control-label"></label>
                <input asp-for="Datos_Economicos.Otros" class="form-control" />
                <span asp-validation-for="Datos_Economicos.Otros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver Al Menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
