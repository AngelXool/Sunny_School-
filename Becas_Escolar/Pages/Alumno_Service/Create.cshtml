@page
@model Becas_Escolar.Pages.Models.Alumno_Service.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar</h1>

<h4>Datos Generales Del Alumno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Alumno.Nombre" class="control-label"></label>
                <input asp-for="Alumno.Nombre" class="form-control" />
                <span asp-validation-for="Alumno.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumno.CURP" class="control-label"></label>
                <input asp-for="Alumno.CURP" class="form-control" />
                <span asp-validation-for="Alumno.CURP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumno.Nacionalidad" class="control-label"></label>
                <input asp-for="Alumno.Nacionalidad" class="form-control" />
                <span asp-validation-for="Alumno.Nacionalidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumno.Fecha_nacimiento" class="control-label"></label>
                <input asp-for="Alumno.Fecha_nacimiento" class="form-control" />
                <span asp-validation-for="Alumno.Fecha_nacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumno.Genero" class="control-label"></label>
                <input asp-for="Alumno.Genero" class="form-control" />
                <span asp-validation-for="Alumno.Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumno.Discapacidad" class="control-label"></label>
                <input asp-for="Alumno.Discapacidad" class="form-control" />
                <span asp-validation-for="Alumno.Discapacidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver Al Menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
