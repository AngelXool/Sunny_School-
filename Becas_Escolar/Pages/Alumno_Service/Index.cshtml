@page
@model Becas_Escolar.Pages.Models.Alumno_Service.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Menu</h1>

<p>
    <a asp-page="Create">Crear Nueva Infromacion</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Alumno[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alumno[0].CURP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alumno[0].Nacionalidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alumno[0].Fecha_nacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alumno[0].Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alumno[0].Discapacidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Alumno) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CURP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_nacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discapacidad)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
