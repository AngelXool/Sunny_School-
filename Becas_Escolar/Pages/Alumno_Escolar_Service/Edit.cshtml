@page
@model Becas_Escolar.Pages.Alumno_Escolar_Service.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editor De Datos</h1>

<h4>Datos Escolares Del Alumno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Alumno_Escolar.id" />
            <div class="form-group">
                <label asp-for="Alumno_Escolar.Nombre" class="control-label"></label>
                <input asp-for="Alumno_Escolar.Nombre" class="form-control" />
                <span asp-validation-for="Alumno_Escolar.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumno_Escolar.Nivel_Escolar" class="control-label"></label>
                <input asp-for="Alumno_Escolar.Nivel_Escolar" class="form-control" />
                <span asp-validation-for="Alumno_Escolar.Nivel_Escolar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumno_Escolar.Grado_Escolar" class="control-label"></label>
                <input asp-for="Alumno_Escolar.Grado_Escolar" class="form-control" />
                <span asp-validation-for="Alumno_Escolar.Grado_Escolar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alumno_Escolar.Nombre_Tutor" class="control-label"></label>
                <input asp-for="Alumno_Escolar.Nombre_Tutor" class="form-control" />
                <span asp-validation-for="Alumno_Escolar.Nombre_Tutor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver Al Mneu Del Alumno</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
