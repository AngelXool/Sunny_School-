@page
@model Sunny_School.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}

    <body style="background-color:aquamarine">
        <div class="container p-4">
            <div class="row">
                <div class="col-md-4 mx-auto">
                    <div class="card text-center">
                        <div class="card-header">
                            <h3>Registro</h3>
                        </div>
                        <img src="~/Imagenes/Login/login.png" class="mx-auto w-25" />
                        <div class="card-body">
                            <form method="post">
                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" placeholder="Correo Electronico" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" placeholder="Contraseña" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Confirmacion" placeholder="Confirmar Contraseña" class="form-control" />
                                    <span asp-validation-for="Input.Confirmacion" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type ="submit" class="btn btn-primary">Registrar</button> 
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

