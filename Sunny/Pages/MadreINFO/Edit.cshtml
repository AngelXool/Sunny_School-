@page
@model Sunny.Pages.MadreINFO.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Infromacion de la Mdre</h1>

<h4>Infromacion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Info_Madre.id" />
            <div class="form-group">
                <label asp-for="Info_Madre.Nombre_Madre" class="control-label"></label>
                <input asp-for="Info_Madre.Nombre_Madre" class="form-control" />
                <span asp-validation-for="Info_Madre.Nombre_Madre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Madre.CURP" class="control-label"></label>
                <input asp-for="Info_Madre.CURP" class="form-control" />
                <span asp-validation-for="Info_Madre.CURP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Madre.Nacionalidad" class="control-label"></label>
                <input asp-for="Info_Madre.Nacionalidad" class="form-control" />
                <span asp-validation-for="Info_Madre.Nacionalidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Madre.Fecha_nacimiento" class="control-label"></label>
                <input asp-for="Info_Madre.Fecha_nacimiento" class="form-control" />
                <span asp-validation-for="Info_Madre.Fecha_nacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Madre.Ocupacion" class="control-label"></label>
                <input asp-for="Info_Madre.Ocupacion" class="form-control" />
                <span asp-validation-for="Info_Madre.Ocupacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Madre.Ingresos" class="control-label"></label>
                <input asp-for="Info_Madre.Ingresos" class="form-control" />
                <span asp-validation-for="Info_Madre.Ingresos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver al Menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
