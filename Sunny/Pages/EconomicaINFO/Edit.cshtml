@page
@model Sunny.Pages.EconomicaINFO.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Informacion</h1>

<h4>Informacion Economica</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Info_Economica.Id" />
            <div class="form-group">
                <label asp-for="Info_Economica.Ingresos_Mensuales" class="control-label"></label>
                <input asp-for="Info_Economica.Ingresos_Mensuales" class="form-control" />
                <span asp-validation-for="Info_Economica.Ingresos_Mensuales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Economica.Gasto_Alimentacion" class="control-label"></label>
                <input asp-for="Info_Economica.Gasto_Alimentacion" class="form-control" />
                <span asp-validation-for="Info_Economica.Gasto_Alimentacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Economica.Gasto_Escolar" class="control-label"></label>
                <input asp-for="Info_Economica.Gasto_Escolar" class="form-control" />
                <span asp-validation-for="Info_Economica.Gasto_Escolar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Economica.Gasto_Vivienda" class="control-label"></label>
                <input asp-for="Info_Economica.Gasto_Vivienda" class="form-control" />
                <span asp-validation-for="Info_Economica.Gasto_Vivienda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Economica.Gasto_Servicios" class="control-label"></label>
                <input asp-for="Info_Economica.Gasto_Servicios" class="form-control" />
                <span asp-validation-for="Info_Economica.Gasto_Servicios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Economica.Gasto_Transporte" class="control-label"></label>
                <input asp-for="Info_Economica.Gasto_Transporte" class="form-control" />
                <span asp-validation-for="Info_Economica.Gasto_Transporte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info_Economica.Otros" class="control-label"></label>
                <input asp-for="Info_Economica.Otros" class="form-control" />
                <span asp-validation-for="Info_Economica.Otros" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver Al Menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
